<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.smartscan.app.smartscanapp.MainActivity">

    <ListView
        android:id="@+id/pairedListView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ListView
        android:id="@+id/scannedListView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="Currently no new device found.."
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/scanningText"
        android:textSize="17dp"
        android:gravity="center"
        android:paddingTop="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/scanningButton"
        android:layout_width="150dp"
        android:textColor="@android:color/white"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/scan_string"
        android:layout_above="@+id/toggleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <ToggleButton
        android:text="Show New Devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:textColor="@android:color/white"
        android:layout_above="@+id/scanningText"
        android:textOff="Show New Devices"
        android:textOn="Show Paired"
        android:layout_centerHorizontal="true" />


</RelativeLayout>