<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/thorluxImage"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/thorlux_image"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/scanningButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_speaker_phone_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/deviceButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_important_devices_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:text="@string/scan_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginBottom="59dp"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/scanningButton" />

    <TextView
        android:text="@string/devices_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/deviceButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SmartScan Connect"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:id="@+id/mainTitle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>